pipeline {
    agent any
    
    stages {
        stage('Checkout') {
            steps {
                echo "1. Fetching code from Git repository..."
                checkout([
                    $class: 'GitSCM',
                    branches: [[name: '*/main']],
                    extensions: [],
                    userRemoteConfigs: [[url: 'https://github.com/NourChallouf1/summerinternship.git']]
                ])
            }
        }
        
        stage('Build') {
            steps {
                echo "2. Building the application..."
                script {
                    // Safe Python check that won't fail the pipeline
                    def pythonCheck = bat(script: 'python --version', returnStatus: true)
                    if (pythonCheck == 0) {
                        echo "Python is available"
                    } else {
                        echo "Python not found - continuing in simulation mode"
                    }
                    
                    // Continue with build steps
                    bat 'echo Simulating build process...'
                }
            }
        }
        
        stage('Test') {
            steps {
                echo "3. Running tests..."
                bat 'echo Simulating test execution...'
                bat 'echo All tests passed!'
            }
        }
        
        stage('Deploy') {
            steps {
                echo "4. Deploying application..."
                bat 'echo Simulating deployment...'
            }
        }
    }
    
    post {
        always {
            echo "Pipeline completed with status: ${currentBuild.currentResult}"
        }
    }
}
