pipeline {
    agent any
    
    stages {
        stage('Checkout') {
            steps {
                echo "1. Fetching code from Git repository..."
                git branch: 'main',
                url: 'https://github.com/NourChallouf1/summerinternship.git'
            }
        }
        
        stage('Build') {
            steps {
                echo "2. Building the application..."
                // Windows compatible commands
                bat 'echo Simulating build step...'
                bat 'python --version || echo Python not installed'
            }
        }
        
        stage('Test') {
            steps {
                echo "3. Running tests..."
                bat 'echo Running tests...'
                bat 'echo Tests passed!'
            }
        }
        
        stage('Deploy') {
            steps {
                echo "4. Deploying application..."
                bat 'echo Simulating deployment...'
                bat 'echo curl -X POST http://fake-deploy-api/deploy'
            }
        }
    }
    
    post {
        always {
            echo "Pipeline completed!"
        }
        success {
            echo "✅ Success!"
        }
        failure {
            echo "❌ Pipeline failed"
        }
    }
}
