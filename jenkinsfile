pipeline {
    agent any
    
    stages {
        stage('Checkout') {
            steps {
                echo "1. Fetching code from Git repository..."
                git branch: 'main', 
                url: 'https://github.com/NourChallouf1/summerinternship.git'
            }
        }
        
        stage('Build') {
            steps {
                echo "2. Building the application..."
                bat 'echo Simulating build step...'
                bat 'python --version || echo [INFO] Python not installed - continuing simulation'
                // Continue even if Python is missing
            }
        }
        
        stage('Test') {
            steps {
                echo "3. Running tests..."
                bat 'echo Simulating tests...'
            }
        }
        
        stage('Deploy') {
            steps {
                echo "4. Deploying application..."
                bat 'echo Simulating deployment...'
            }
        }
    }
    
    post {
        always {
            echo "Pipeline completed!"
        }
    }
}
